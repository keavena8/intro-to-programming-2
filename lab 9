using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.IO;

namespace lab_week9
{
    class Program
    {
        static void Main(string[] args)
        {
            Information();
        }
        static void Information()
        {
            string LineIn;
            string[] splitup = new string[5];
            string vesselName;
            int vesselType;
            int Tonnage;
            int Crew;
            int Location;
            string Place;
            string Type;

            FileStream fs = new FileStream(@"C:\Users\S00193621\Downloads\FrenchMF", FileMode.Open, FileAccess.Read);
            StreamReader sr = new StreamReader(fs);
            LineIn = sr.ReadLine();
            while (LineIn != null)
            {
                splitup = LineIn.Split(',');
                vesselName = splitup[0];
                vesselType = int.Parse(splitup[1]);
                Tonnage = int.Parse(splitup[2]);
                Crew = int.Parse(splitup[3]);
                Location = int.Parse(splitup[4]);
             

                switch (vesselType)
                {
                    case 1:
                        Type = "Aircraft carrier";
                        break;
                    case 2:
                        Type = "Cruiser/Battleship";
                        break;
                    case 3:
                        Type = "Destroyer";
                        break;
                    case 4:
                        Type = "Frigate";
                        break;
                    case 5:
                        Type = "Nuclear Submarine";
                        break;
                    case 6:
                        Type = "Minelayer/Sweeper";
                        break;
                    default:
                        Type = "Invalid number";
                        break;
                }
                switch (Location)
                {
                    case 1:
                        Place = "The Pacific";
                        break;
                    case 2:
                        Place = "The Atlanic";
                        break;
                    case 3:
                        Place = "The Mediterranean";
                        break;
                    case 4:
                        Place = "The Indian Ocean";
                        break;
                    case 5:
                        Place = " The Other Seas";
                        break;
                    default:
                        Place = "Invalid number";
                            break;
                }
                switch (Crew)
                {
                    case 1
                }
                Console.WriteLine(Type);
                Console.WriteLine(Place);
                Console.ReadLine();
                LineIn = sr.ReadLine();
            }


            Console.ReadLine();
            sr.Close();

        }
    }
}
