        static bool FindAge(int Age)
        {
            // part i
            if (Age >= 18 && Age <= 21)
            {
                return true;
            }
            else
            {
                return false;
            }
        }
        static double FindCost(string ProductCode)
        {
            //part ii
            double Cost;
            switch (ProductCode)
            {
                case "ABC":
                    Cost = 10.10;
                    break;
                case "XYZ":
                    Cost = 69.34;
                    break;
                case "FR45":
                    Cost = 34.0;
                    break;
                case "S34":
                case "G65":
                case "F34":
                    Cost = 5;
                    break;
                default:
                    Cost = -999;
                    break;
            }
            return Cost;
        }


        static int AlltheNine(int x)
        {
            //part iii
